language: c

dist: trusty
sudo: required

addons:
  apt:
    packages:
      - cmake
      - cmake-data

before_install:
   - curl -sS "{{PUBLISHER_DEBIAN_GPG_URL}}" | sudo apt-key add -
   - echo "deb [arch=all] "{{PUBLISHER_DEBIAN_SOURCE}}" `lsb_release -c -s` main" | sudo tee "/etc/apt/sources.list.d/{{PUBLISHER_DOMAIN}}-main.list" > /dev/null
   - sudo apt-get update
   - sudo apt-get -y --allow-unauthenticated install mulle-build

script:
   - mulle-build -vv -V --bootstrap
